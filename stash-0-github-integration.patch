+      return { success: false, message: 'User not authenticated' }
+    }
+
+    const githubConnection = await db.gitHub.findFirst({
+      where: { userId: user.id },
+    })
+
+    if (!githubConnection || !githubConnection.webhookId) {
+      return {
+        success: false,
+        message: 'No active GitHub listener found',
+      }
+    }
+
+    // Remove webhooks from all repositories
+    const removePromises = githubConnection.repositories.map(async (repo) => {
+      try {
+        await axios.delete(
+          `https://api.github.com/repos/${repo}/hooks/${githubConnection.webhookId}`,
+          {
+            headers: {
+              Authorization: `Bearer ${githubConnection.accessToken}`,
+              Accept: 'application/vnd.github.v3+json',
+            },
+          }
+        )
+        return { repo, success: true }
+      } catch (error: any) {
+        console.error(`Error removing webhook from ${repo}:`, error.response?.data || error.message)
+        return { repo, success: false }
+      }
+    })
+
+    await Promise.all(removePromises)
+
+    // Clear webhook data
+    await db.gitHub.update({
+      where: { id: githubConnection.id },
+      data: {
+        webhookId: null,
+        webhookSecret: null,
+      },
+    })
+
+    return {
+      success: true,
+      message: 'GitHub listener deactivated successfully',
+    }
+  } catch (error: any) {
+    console.error('Error deactivating GitHub listener:', error)
