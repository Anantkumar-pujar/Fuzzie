+'use server'
+
+import { currentUser } from '@clerk/nextjs/server'
+import { db } from '@/lib/db'
+import axios from 'axios'
+
+export const activateGitHubListener = async () => {
+  try {
+    const user = await currentUser()
+    if (!user) {
+      return { success: false, message: 'User not authenticated' }
+    }
+
+    // Check if GitHub is connected
+    const githubConnection = await db.gitHub.findFirst({
+      where: { userId: user.id },
+    })
+
+    if (!githubConnection) {
+      return {
+        success: false,
+        message: 'Please connect your GitHub account first',
+      }
+    }
+
+    // Check if webhooks are already set up
+    if (githubConnection.webhookId && githubConnection.repositories.length > 0) {
+      return {
+        success: true,
+        message: 'GitHub listener is already active',
+        alreadyActive: true,
+        repositories: githubConnection.repositories,
+      }
+    }
+
+    // Set up webhooks for all repositories
+    const webhookUrl = `${process.env.NEXT_PUBLIC_URL}/api/github/webhook`
+    const webhookSecret = process.env.GITHUB_WEBHOOK_SECRET
+    
+    if (!webhookSecret) {
+      return {
+        success: false,
+        message: 'GitHub webhook secret not configured. Please contact administrator.',
+      }
+    }
+
+    const setupPromises = githubConnection.repositories.map(async (repo) => {
+      try {
+        const response = await axios.post(
+          `https://api.github.com/repos/${repo}/hooks`,
+          {
+            name: 'web',
+            active: true,
+            events: ['push', 'pull_request', 'issues', 'release', 'fork', 'star'],
+            config: {
+              url: webhookUrl,
+              content_type: 'json',
+              secret: webhookSecret,
+              insecure_ssl: '0',
+            },
+          },
+          {
+            headers: {
+              Authorization: `Bearer ${githubConnection.accessToken}`,
+              Accept: 'application/vnd.github.v3+json',
+            },
+          }
+        )
+        return { repo, webhookId: response.data.id, success: true }
+      } catch (error: any) {
+        console.error(`Error setting up webhook for ${repo}:`, error.response?.data || error.message)
+        return { repo, success: false, error: error.response?.data?.message || error.message }
+      }
+    })
+
+    const results = await Promise.all(setupPromises)
+    const successfulSetups = results.filter((r) => r.success)
+    
+    if (successfulSetups.length > 0) {
+      // Store the first webhook ID (they should all be similar)
+      await db.gitHub.update({
